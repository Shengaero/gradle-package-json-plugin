
root = true

[*]
charset = utf-8
indent_style = space

[{LICENSE, NOTICE}]
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = lf
indent_size = 4

[*.properties]
trim_trailing_whitespace = false
insert_final_newline = false
end_of_line = lf

[**.{java, kt, kts, gradle}]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_size = 4

[**.gradle.kts]
indent_size = 2

[*.md]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[gradlew.bat]
end_of_line = crlf